<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper     
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yeps.model">
	<select id="getEvent" parameterType="int" resultType="EventDTO">
		select * from yeps_event where evnum=#{evnum}
	</select>

	<select id="eventList" resultType="EventDTO">
		select * from yeps_event order by evnum desc
	</select>

	<insert id="insertEvent" parameterType="EventDTO">
		insert into yeps_event values(yeps_event_seq.nextval, #{discount},#{content},#{filename},#{filesize}, #{periode1}, #{periode2},#{place},sysdate,#{title})
	</insert>

	<delete id="deleteEvent" parameterType="int">
		delete yeps_event where evnum=#{evnum}
	</delete>
	
	<update id="updateEvent" parameterType="int">
	    update yeps_event set discount=#{discount}, content=#{content}, filename=#{filename},filesize=#{filesize}, periode2=#{periode2}, periode1=#{periode1}, place=#{place}, sysdate, title=#{title}
	</update>
	
	<update id="getCount" >
	    select count(*) from yeps_event 
	</update>
	    	
	    
	
</mapper>