<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.model">
	<select id="listRestaurant" resultType="RestaurantDTO">
		select * from restaurant
	</select>

	<insert id="insertRestaurant" parameterType="RestaurantDTO">
		insert into restaurant values(restaurant_seq.nextval,0,#{rname},#{zipno},#{roadAddrPart1},#{addrDetail},#{roadAddrPart2},
		#{raddress},#{hp2},#{hp3},#{foodstyle},#{mon},#{tue},#{wed},#{thu},#{fri},#{sat},#{sun},
		#{reststyle},#{reserv},#{delivery},#{takeout},#{parking},#{kidzone},#{groupreserv},#{noise},#{alcohol},#{waiting},
		#{wifi},#{toilet},#{tablecount},#{standard},#{busytime})
	</insert>
	
	<select id="getRest" resultType="RestaurantDTO" parameterType="int">
		select * from restaurant where rnum=#{rnum}
	</select>
	<insert id="uploadFile" parameterType="HashMap">
    INSERT INTO
    "FILE_TABLE" (FILE_NUM, O_NAME, FILE_NAME, FILE_SIZE,RNUM) VALUES (file_seq.nextval, #{originalfileName}, #{saveFileName}, #{fileSize}, #{rnum})
</insert>
	<select id="uploadFileList" resultType="uploadFileVO">
		select * from file_table where rnum=#{rnum}
	</select>




</mapper>











