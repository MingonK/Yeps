<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.model">
	<select id="listRestaurant" resultType="RestaurantDTO" parameterType="RestaurantDTO">
		select * from (select rownum rn, A.* from (select * from restaurant order by rnum desc)A) where rn between #{start} and #{end}
	</select>

	<insert id="insertRestaurant" parameterType="RestaurantDTO">
		insert into restaurant values(restaurant_seq.nextval,0,#{rname},#{filename},#{zipno},#{roadAddrPart1},#{addrDetail},#{roadAddrPart2},
		#{raddress},#{hp2},#{hp3},#{foodstyle},#{mon},#{tue},#{wed},#{thu},#{fri},#{sat},#{sun},
		#{reststyle},#{reserv},#{delivery},#{takeout},#{parking},#{kidzone},#{groupreserv},#{noise},#{alcohol},#{waiting},
		#{wifi},#{toilet},#{tablecount},#{standard},#{busytime})
	</insert>
	
	<select id="getRest" resultType="RestaurantDTO" parameterType="int">
		select * from restaurant where rnum=#{rnum}
	</select>
	
	<select id="uploadFileList" resultType="FileDTO">
		select * from yeps_file where rnum=#{rnum}
	</select>
	
	<select id="getCount" resultType="int">
		select count(*) from restaurant
	</select>
	
	
	
	
	
	
	
	
	
	<select id="listrestaurant" resultType="RestaurantDTO">
		select * from restaurant order by rnum desc
	</select>
	
	<select id="GetRestaurantName_R" resultType="RestaurantDTO" parameterType="int">
		select * from yeps_restaurant where rnum = #{GETrnum}
	</select>

	<select id="restaurantRName" resultType="RestaurantDTO" parameterType="int">
		select * from yeps_restaurant where rnum= #{rnumList}
	</select>
	
	<select id="restaurant_restaurantIMG" resultType="RestaurantDTO">
  		select * from yeps_restaurant where 19 >= rownum 
  	</select>
  	
  	<select id="previous_R" resultType="RestaurantDTO" parameterType="int">
  		select *from yeps_restaurant where rnum= #{rnum}
  	</select>

	
	


</mapper>











